{
  "name": "dayart-erp",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "prestart:prod": "npm run build && npm run copy:templates",
    "start": "node dist/index.js",
    "create-env": "printenv > .env",
    "test": "vitest -w",
    "coverage": "vitest run --coverage",
    "copy:templates": "cpx './src/infrastructure/email/template/**' 'dist/infrastructure/email/template/'",
    "start:dev": "nodemon --exec NODE_ENV=development ts-node src/index.ts ",
    "migrate:dev": "NODE_ENV=development dotenv -e .env.development sequelize db:migrate",
    "migrate:test": "NODE_ENV=test dotenv -e .env sequelize db:migrate --env test",
    "migrate:prod": "NODE_ENV=production sequelize db:migrate --env production"
  },
  "nodemonConfig": {
    "ignore": [
      "node_modules"
    ],
    "delay": "2500"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.1.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "colors": "^1.4.0",
    "cors": "^2.8.5",
    "cpx": "^1.5.0",
    "dotenv": "^16.4.1",
    "express": "^4.18.2",
    "handlebars": "^4.7.7",
    "jsonwebtoken": "^9.0.0",
    "nodemailer": "^6.9.1",
    "pg": "^8.9.0",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.29.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/handlebars": "^4.1.0",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/node": "^18.14.1",
    "@types/nodemailer": "^6.4.7",
    "@types/sequelize": "^4.28.14",
    "@vitest/coverage-c8": "^0.29.2",
    "nodemon": "^2.0.20",
    "sequelize-cli": "^6.6.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5",
    "vitest": "^0.29.2"
  }
}
